[user]
  name = Ryuya Ikeda
  email = rikeda71@gmail.com
[includeIf "gitdir:~/Desktop/ghe/"]
  path = ~/.gitconfig.ghe
[core]
  editor = vim -c \"set fenc=utf-8\"
  precomposeunicode = true
  quotepath = false
[color]
  diff = auto
  status = auto
  branch = auto
[push]
  default = simple
[pull]
  rebase = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[init]
  defaultBranch = master
[alias]
	a = add
	br = branch
	c = commit
	d = diff --word-diff
	log = log --oneline --graph
	p = push -u origin HEAD
	s = status
	sw = switch
[ghq]
  root = ~/ghq
[diff]
	algorithm = histogram
[wt]
	basedir = .worktrees
